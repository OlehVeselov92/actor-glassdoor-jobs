{
    "title": "Input schema for Glassdoor jobs actor",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "query": {
            "title": "Query",
            "type": "string",
            "description": "Job Title, Keywords, or Company",
            "editor": "textfield"
        },
        "category": {
            "title": "Category",
            "type": "string",
            "description": "Jobs or Companies",
            "prefill": "Jobs",
            "enum": [
                "Jobs",
                "Companies"
            ],
            "editor": "select"
        },
        "location": {
            "title": "Location",
            "type": "string",
            "description": "City, country or zip code",
            "prefill": "",
            "editor": "textfield"
        },
        "locationstate": {
            "title": "Location state",
            "type": "string",
            "description": "Location state (abbreviation)",
            "prefill": "",
            "editor": "textfield"
        },
        "maxResults": {
            "title": "Maximum results",
            "type": "integer",
            "description": "Limit number of results",
            "minimum": 0
        },
        "proxy": {
            "title": "Proxy URL",
            "type": "string",
            "description": "Custom proxy URL, if not specified then Apify.getApifyProxyUrl() will be used",
            "prefill": "",
            "editor": "textfield",
            "sectionCaption": "Advanced settings"
        }
   },
    "required": ["query"]
}